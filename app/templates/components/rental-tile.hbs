
<li>
  {{#link-to 'rental' rental.id}}{{rental.owner}}'s {{rental.type}} in {{rental.city}}{{/link-to}}

  {{#if isImageShowing}}
    <p><img src={{rental.image}} alt={{rental.type}} {{action 'imageHide'}} width="300px"/></p>
    <button class="btn btn-primary"{{action 'imageHide'}}>Hide Image</button>
    {{else}}<br>
    <button class="btn btn-primary"{{action 'imageShow'}}>Show Image</button>
  {{/if}}
</li>
